{
  "name": "@ctrlcan/orbit",
  "version": "0.1.0",
  "description": "CtrlCan Orbit â€” cross-page, themeable React site tour.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "cov": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage --runInBand",
    "re": "rm -rf node_modules package-lock.json dist && npm install && npm run build && npm version patch --force && npm publish --registry=https://gitcan.kalecanbazoglu.synology.me/api/packages/Ctrlcan/npm/",
    "pub": "npm run build && npm version patch --no-git-tag-version --no-commit-hooks && npm publish --registry=https://gitcan.kalecanbazoglu.synology.me/api/packages/Ctrlcan/npm/"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "jotai": ">=2"
  },
  "devDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "jotai": "^2.12.5",
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@tanstack/react-query": "^5.90.2",
    "@testing-library/react": "^16.3.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "babel-jest": "^30.1.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "tsup": "^8.5.0"
  },
  "keywords": ["react", "tour", "onboarding", "spotlight", "guide"],
  "license": "MIT"
}
